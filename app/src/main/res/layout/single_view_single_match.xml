<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:layout_margin="2dp"
    android:weightSum="3"
    android:gravity="center"
    android:background="#12123AAA">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5">
        <TextView
            android:id="@+id/txt_match_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="34" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.9">
        <ImageView
            android:id="@+id/imgView_team_one"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/img_cze" />
        <TextView
            android:id="@+id/txt_team_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/imgView_team_one"
            android:text="Czech Republic Women" />
        <ImageView
            android:id="@+id/imgView_team_two"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/imgView_team_one"
            android:src="@drawable/img_spain" />
        <TextView
            android:id="@+id/txt_team_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_team_one"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/imgView_team_two"
            android:text="Spain Women" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6">
        <TextView
            android:id="@+id/txt_score_team_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="0" />
        <TextView
            android:id="@+id/txt_score_team_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_score_team_one"
            android:layout_marginLeft="2dp"
            android:text="3" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/baseline_star_outline_24" />
    </RelativeLayout>

</LinearLayout>